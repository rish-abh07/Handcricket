{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Raylib Game",
      "type": "shell",
      "command": "gcc",
      "args": [
        "test.c",
        "-o",
        "output/test.exe",
        "-Iinclude",        // Path to raylib.h
        "-Llib",            // Path to raylib.a or raylib.dll.a
        "-lraylib",
        "-lopengl32",
        "-lgdi32",
        "-lwinmm"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Compiles Raylib Hand Cricket Game"
    }
  ]
}
